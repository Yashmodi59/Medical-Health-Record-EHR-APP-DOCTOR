<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Date"
            android:layout_marginStart="20dp"
            android:textAlignment="textStart"
            android:textSize="18dp"
            android:textStyle="bold"
            android:id="@+id/user_mh_date"
            android:textColor="#000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name Of Past History"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:layout_marginEnd="7dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="History Name"
                android:layout_marginStart="20dp"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/user_mh_name"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Consultant Name"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:layout_marginEnd="7dp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="History Name"
                android:layout_marginStart="55dp"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/user_mh_doc_name"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/user_mh_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/input_design"
                android:text="Allergy Type"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Allergy Type"
                android:layout_marginStart="20dp"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="@drawable/input_design"
                android:id="@+id/user_mh_severity"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_mh_still_have"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="2"
                android:text="Still Have"
                android:textAlignment="textStart"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Have Any"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:id="@+id/user_mh_have_any"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Is Uploaded"

                android:textAlignment="textStart"
                android:layout_weight="2"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/user_mh_is_uploaded"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>