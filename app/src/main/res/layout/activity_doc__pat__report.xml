<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".PatientReport.Doc_Pat_Report">
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/asset"
        android:layout_centerHorizontal="true"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pdfname"
        android:hint="Enter Report name"
        android:layout_centerVertical="true"
        android:background="@drawable/input_design"
        android:padding="12dp"
        android:layout_margin="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pdfbtn"
        android:layout_below="@+id/pdfname"
        android:background="@drawable/button"
        android:layout_margin="5dp"
        android:text="Upload Report"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pdfbtnview"
        android:layout_below="@+id/pdfbtn"
        android:background="@drawable/button"
        android:layout_margin="5dp"
        android:onClick="btn_action"
        android:text="View Uploaded report"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>