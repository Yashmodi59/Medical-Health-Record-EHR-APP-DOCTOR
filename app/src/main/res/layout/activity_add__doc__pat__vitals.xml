<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@drawable/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientVitals.Add_Doc_Pat_Vitals">
    <TextView
        android:id="@+id/vital1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Blood Pressure"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#0029BF"

        />

    <EditText
        android:id="@+id/vitaltext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vital1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:hint="Type Your Blood Pressure"
        android:inputType="number"
        android:padding="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#0029BF"
        />
    <TextView
        android:id="@+id/vital2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Body Temperature"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#0029BF"
        android:layout_below="@+id/vitaltext1"
        />

    <EditText
        android:id="@+id/vitaltext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vital2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:hint="Type Your Body Temparaure"
        android:inputType="number"
        android:padding="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#0029BF"
        />
    <TextView
        android:id="@+id/vital3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Heart Rate"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#0029BF"
        android:layout_below="@+id/vitaltext2"
        />

    <EditText
        android:id="@+id/vitaltext3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vital3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:hint="Type Your Heart Rate"
        android:inputType="number"
        android:padding="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#0029BF"
        />
    <TextView
        android:id="@+id/vital4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Respiration Rate"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#0029BF"
        android:layout_below="@+id/vitaltext3"
        />

    <EditText
        android:id="@+id/vitaltext4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vital4"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="15dp"
        android:hint="Type Your Respiration Rate"
        android:inputType="number"
        android:padding="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textColor="#0029BF"
        />

    <Button
        android:id="@+id/vital_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/vitaltext4"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button"
        android:padding="17dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Submit"
        android:textColor="@android:color/white"
        />



</RelativeLayout>