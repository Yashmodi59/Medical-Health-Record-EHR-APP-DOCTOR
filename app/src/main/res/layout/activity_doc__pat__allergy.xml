<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgapps"
    android:layout_height="match_parent"
    tools:context=".PatientAllergy.Doc_Pat_Allergy">
    <RelativeLayout
        android:id="@+id/allergy_RR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/main_1"
            android:layout_width="84dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="2dp"
            android:background="#fff"
            android:src="@drawable/ic_first_aid" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/main_1"
            android:text="Allergies"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold|italic" />
        <TextView
            android:id="@+id/allergy_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap The Button To Add The Allergies"
            android:textSize="40sp"
            android:textColor="#fff"
            android:layout_below="@+id/main_1"
            android:textStyle="italic|bold"
            />

    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="25dp"
        app:srcCompat="@android:drawable/ic_input_add" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/display_allergy_rec_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/allergy_RR"
        android:layout_centerVertical="true"/>

</RelativeLayout>