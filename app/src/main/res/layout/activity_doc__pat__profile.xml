<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientProfile.Doc_Pat_Profile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile_header">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/asset"
            android:layout_centerHorizontal="true"
            android:id="@+id/mainImage"
            android:foregroundGravity="center"
            />

        <EditText
            android:id="@+id/register_phone_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_email_input"
            android:background="@drawable/input_design"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="PHONE NUMBER"
            android:layout_marginTop="6dp"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/register_username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:layout_below="@+id/mainImage"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="First Name"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/register_dob_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_lastname_input"
            android:background="@drawable/input_design"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Select Date Of Birth"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/register_middlename_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_username_input"
            android:background="@drawable/input_design"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Middle Name"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/register_lastname_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_middlename_input"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/input_design"
            android:hint="Last Name"
            android:inputType="text"
            android:padding="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_dob_input"
            android:background="@drawable/input_design"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <RadioGroup
            android:id="@+id/register_radiogrp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_phone_number_input"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/input_design"
            android:orientation="horizontal"
            android:padding="20dp"

            >

            <RadioButton
                android:id="@+id/register_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:checked="true"
                android:paddingRight="50dp"
                />

            <RadioButton
                android:id="@+id/register_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:paddingRight="50dp"
                />
        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Differentially Abled"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_below="@+id/register_radiogrp1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:textSize="20sp"
            android:id="@+id/register_disable_input"/>
        <RadioGroup
            android:id="@+id/register_radiogrp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_disable_input"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/input_design"
            android:orientation="horizontal"
            android:padding="20dp"

            >

            <RadioButton
                android:id="@+id/register_Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:checked="true"
                android:paddingRight="50dp"
                />

            <RadioButton
                android:id="@+id/register_No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:paddingRight="50dp"
                />
        </RadioGroup>
        <EditText
            android:id="@+id/register_PINCODE_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_radiogrp2"
            android:background="@drawable/input_design"
            android:layout_marginTop="6dp"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="PINCODE"
            android:inputType="number"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/register_blood_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Blood Group"
            android:layout_below="@+id/register_PINCODE_input"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"/>

        <Spinner
            android:id="@+id/register_blood_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_blood_input"
            android:layout_alignParentStart="true"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:entries="@array/blood_group"
            android:prompt="@string/blood_group_prompt"
            android:textStyle="bold"
            android:scrollbarSize="25dp"
            android:layout_margin="15dp"
            android:textColorHint="@drawable/input_design"
            android:background="@drawable/input_design"
            android:textColor="#0029BF" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/register_blood_group"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button"
            android:padding="17dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Save"
            android:textColor="@android:color/white"
            />



    </RelativeLayout>

</ScrollView>