<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorPrimary"
    >
<!--    doctor,remark,appointment,severity,date-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_dp5"
            android:text="Date"
            android:layout_marginStart="20dp"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/ic_first_aid"
            android:id="@+id/user_dp_view"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout

                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="20dp"

                    android:layout_weight="1"
                    android:text="Doctor Name" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="Doctor Name"
                    android:layout_marginStart="20dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:id="@+id/user_dp1"
                    android:textColor="@color/colorPrimary"
                />
            </LinearLayout>
            <LinearLayout

                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="20dp"

                    android:layout_weight="1"
                    android:text="Contains Reports" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="Doctor Name"
                    android:layout_marginStart="20dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:id="@+id/user_dp_rep"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="Remarks" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Remarks"
                    android:layout_marginStart="20dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:id="@+id/user_dp2"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:text="Severity" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="Severity"
                    android:layout_marginStart="20dp"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:id="@+id/user_dp3"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:textColor="@color/colorAccent"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Next Appoinment Date" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Next Date"
                android:layout_marginStart="20dp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:id="@+id/user_dp4"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>