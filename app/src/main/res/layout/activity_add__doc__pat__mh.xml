<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/welcome"
    tools:context=".PatientMedicalHistory.Add_Doc_Pat_MH">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/medical_history_Doc_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Doctor/Consultant Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"

            />

        <EditText
            android:id="@+id/medical_history_Doc_Name2"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medical_history_Doc_Name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:hint="Type Consultant Name"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"
            />

        <TextView
            android:id="@+id/medical_history_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Medical History"
            android:layout_below="@+id/medical_history_Doc_Name2"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"

            />

        <EditText
            android:id="@+id/medical_history_text2"
            android:layout_width="383dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medical_history_text1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:hint="Type Your Medical History"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"
            />

        <TextView
            android:id="@+id/medical_history_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Do You Still Have This disease?"
            android:layout_below="@+id/medical_history_text2"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"/>

        <RadioGroup
            android:id="@+id/medical_history_radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/medical_history_text3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:padding="20dp">


            <RadioButton
                android:id="@+id/medical_history_Yes1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:checked="true"
                android:paddingRight="50dp"
                android:textColor="#0029BF"
                />

            <RadioButton
                android:id="@+id/medical_history_No1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:paddingRight="50dp"
                android:textColor="#0029BF"
                />
        </RadioGroup>
        <TextView
            android:id="@+id/medical_history_haveReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Do You Have Any Report?"
            android:layout_below="@+id/medical_history_radiogroup1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"/>

        <RadioGroup
            android:id="@+id/medical_history_radiogroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/medical_history_haveReport"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:padding="20dp">


            <RadioButton
                android:id="@+id/medical_history_Yes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:checked="true"
                android:paddingRight="50dp"
                android:textColor="#0029BF"
                />

            <RadioButton
                android:id="@+id/medical_history_No2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:paddingRight="50dp"
                android:textColor="#0029BF"
                />
        </RadioGroup>
        <TextView
            android:id="@+id/medical_history_uploadReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Have U Uploaded Report?"
            android:layout_below="@+id/medical_history_radiogroup2"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"/>

        <RadioGroup
            android:id="@+id/medical_history_radiogroup3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/medical_history_uploadReport"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:padding="20dp">


            <RadioButton
                android:id="@+id/medical_history_Yes3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:checked="true"
                android:paddingRight="50dp"
                android:textColor="#0029BF"
                />

            <RadioButton
                android:id="@+id/medical_history_No3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:paddingRight="50dp"
                android:textColor="#0029BF"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/medical_history_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Type Of Medical History"
            android:layout_below="@+id/medical_history_radiogroup3"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#0029BF"/>
        <Spinner
            android:id="@+id/medical_history_spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medical_history_text4"
            android:layout_alignParentStart="true"
            android:layout_marginTop="1dp"
            android:prompt="@string/allergy_type_prompt"
            android:scrollbarSize="25dp"
            android:entries="@array/Medical_History"
            android:layout_margin="15dp"
            android:textColor="#0029BF"
            />

        <TextView
            android:id="@+id/medical_history_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Severity"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@+id/medical_history_spinner1"
            android:textColor="#0029BF"
            />
        <Spinner
            android:id="@+id/medical_history_spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medical_history_text5"
            android:layout_alignParentStart="true"
            android:entries="@array/severity_arrays"
            android:layout_marginTop="1dp"
            android:prompt="@string/severity_prompt"
            android:scrollbarSize="25dp"
            android:layout_margin="15dp"
            android:textColor="#0029BF"
            />
        <Button
            android:id="@+id/medical_history_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medical_history_spinner2"
            android:layout_margin="10dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:background="@drawable/input_design"
            android:textColor="#0029BF"/>
    </RelativeLayout>
</ScrollView>